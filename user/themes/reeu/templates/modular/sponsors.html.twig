{{ page.content }}

<div class="sponsors">
    {% for batch in page.children()|batch(3) %}
    <div class="column-row">
        {% for sponsor in batch %}
        <div class="sponsor column-1-3">
            {% set image = (sponsor.media.images|first).cropResize(300) %}
            <img src="{{  image.url }}" class="img-responsive">
        </div>
        {% endfor %}
    </div>
    {% endfor %}
</div>